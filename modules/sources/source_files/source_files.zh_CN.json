{
    "source_files":{
	"name":"sourcefiles",
	"parameters":{
	     "folder":{
		"type":"string",
		"tooltip":"监视文件夹",
		"default":"."
	    },
	     "type":{
		"type":"string",
		"tooltip":"文件类型",
		"default":"*.pcm"
	    },
	    "encode":{
		"type":"enum",
		"tooltip":"字符编码",
		"default":0,
		 "range":{
		    "0":"Local 8 bits",
		    "1":"UTF-8"
		}
	    },
	     "mode":{
		"type":"enum",
		"tooltip":"工作模式",
		"default":0,
		 "range":{
		    "0":"顺序处理文件",
		    "1":"循环处理文件"
		}
	    },
	     "auto_del":{
		"type":"bool",
		"tooltip":"自动删除处理后的文件",
		"default":0
	    },
	     "frame_contines":{
		"type":"bool",
		"tooltip":"前后两个文件接续帧",
		"default":1
	    },
	    "initial_offset":{
		"type":"int",
		"tooltip":"初始偏移",
		"default":0
	    },
	    "frame_len":{
		"type":"int",
		"tooltip":"帧长(字节)",
		"default":1
	    },
	    "read_jump":{
		"type":"int",
		"tooltip":"每两次读取之间的间隔字节",
		"default":1
	    },
	    "recursive":{
		"type":"int",
		"tooltip":"递归处理子文件夹",
		"default":0
	    },
	    "frame_rate":{
		"type":"float",
		"tooltip":"帧速率(帧/秒)",
		"default":100
	    },
	    "sample_rate":{
		"type":"float",
		"tooltip":"采样率(Hz)",
		"default":8000.000
	    },
	    "keep_last":{
		"type":"bool",
		"tooltip":"保留最新的一个文件不处理(避免冲突)",
		"default":1
	    }
	},
	"input_subjects":
	{
	},
	"output_subjects":{
	    "source":{
		"type":"byte",
		"tooltip":"输出信息"
	    },
	    "timestamp":{
		"type":"unsigned long long",
		"tooltip":"时戳"
	    }
	}
    }
}
